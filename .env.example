# Telegram bot token
BOT_TOKEN=

# Data directory for downloads and SQLite database
DATA_DIR=/workspace/NeuronDownloader/data
DB_FILENAME=bot.db

# Cleanup settings
CLEANUP_INTERVAL_SECONDS=600
CLEANUP_MAX_AGE_SECONDS=18000

# Downloader settings
COOKIES_FILE=cookies.txt
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Admin/user access
ADMIN_IDS=
REQUIRED_CHAT_IDS=

# Download limits
MAX_CONCURRENT_DOWNLOADS=2
MAX_QUEUE_SIZE=20
MAX_ACTIVE_TASKS_PER_USER=1
FREE_DOWNLOAD_LIMIT=5
FREE_DOWNLOAD_WINDOW_SECONDS=86400

# Telegram API settings
TELEGRAM_UPLOAD_TIMEOUT_SECONDS=600
TELEBOT_LOG_LEVEL=CRITICAL
TELEGRAM_POLLING_ERROR_DELAY_SECONDS=5
TELEGRAM_POLLING_DNS_DELAY_SECONDS=30
LOG_LEVEL=INFO
ENABLE_REACTIONS=true

# VK credentials
VK_USERNAME=
VK_PASSWORD=

# YouTube client settings
# default = tv,ios,web (recommended for best compatibility)
YOUTUBE_PLAYER_CLIENTS=default
# JS Runtime for YouTube processing (node, deno, bun)
YOUTUBE_JS_RUNTIME=node
# Path to Node.js (check: which node)
YOUTUBE_JS_RUNTIME_PATH=/usr/bin/node
